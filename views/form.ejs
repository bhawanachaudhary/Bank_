<%- include("partials/header") %>
<div class="transfer-money-form">
    <div class="row mx-0">
        <div class="col-md-4 col-lg-6">
            <div>
                <img src="https://static.ewebbuddy.com/2018/12/55044540-l-homme-d-affaires-de-transfert-d-argent-en-ligne.jpg">
            </div>
        </div>
        <div class="col-md-8 col-lg-6 justify-content-center">
            <div class="form-content">
                <div class="form-body">
                    <div class="form pt-3">
                        <h3 class="text-primary">Your account information </h3>
                        <h4>Name: <%= fromUser.name %></h4>
                        <h4>Balance= <%= fromUser.credits %></h4>  
                    </div>
        
                    <div class="form">
                        <h3 class="text-primary">Transferring To: </h3>
                        <h4>Name: <%= toUser.name %></h4>
                        <h4>Balance= <%= toUser.credits %></h4>
                    </div>
        
                    <div class="form">
                        <form action="/transfer/<%= fromUser._id %>/<%= toUser._id %>?_method=PUT" method="POST">
                            <label for="credits">Enter Amount</label>
                            <br>
                            <input type="number" class="form-control" id="credit" name="credit" placeholder="Amount" value="">
                            <br>
                            <div class="submit-btn">
                                <button type="submit" class="btn btn-success transfer-btn btn-lg">Transfer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
    

<%- include("partials/footer") %>